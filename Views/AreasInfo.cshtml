@page
@model AreasInfoModel
@{
  ViewData["Title"] = "All Area Info";
}

<h2>Every Type of Crime</h2>  

@{
   if (@Model.EX != null)
	 {
	   <br />
		 <br />
		 <h3>**ERROR: @Model.EX.Message</h3>
		 <br />
		 <hr />
		 <br />
		 <br />
	 }
}

<table class="table">  
    <thead>  
        <tr>  
            <th>  
                Area
            </th>  
            <th>  
                AreaName
            </th>  
            <th>  
                NumCrimes
            </th>  
            <th>  
                Percent Total Crimes
			</th>
        </tr>  
    </thead>  
    <tbody>  
				
        @foreach (var item in Model.CrimeList)  
        {  
            <tr>   
                <td>  
                    @item.Area
                </td>  
                <td>  
                    @item.AreaName
                </td>  
                <td>  
                    @item.NumCrimes
                </td>  
                <td>  
                    @item.CrimePercent
				
                </td>  
            </tr>  
						
					
        }  
    </tbody>  
</table> 