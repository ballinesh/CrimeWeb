@page
@model CrimesTop10Model
@{
  ViewData["Title"] = "Top-10 Crimes";
}

<h2>Top-10 Crimes</h2>  

@{
   if (@Model.EX != null)
	 {
	   <br />
		 <br />
		 <h3>**ERROR: @Model.EX.Message</h3>
		 <br />
		 <hr />
		 <br />
		 <br />
	 }
}

<table class="table">  
    <thead>  
        <tr>  
            <th> 
				 Rank
			 </th>  
            <th> 
                IUCR
            </th>  
            <th>  
                PrimaryDesc
            </th>  
            <th>  
                SecondaryDesc
            </th>  
            <th>  
                NumCrimes
            </th>  
            <th>  
                CrimePercent
            </th>
			<th>
				ArrestedPercent
			</th>
        </tr>  
    </thead>  
    <tbody>  
				@{
				   int rank = 1;
				 }
				
        @foreach (var item in Model.CrimeList)  
        {  
            <tr>  
                <td>  
					@rank
                </td>  
                <td>  
                    @item.IUCR
                </td>  
                <td>  
                    @item.PrimaryDesc
                </td>  
                <td>  
                    @item.SecondaryDesc
                </td>  
                <td>  
                    @item.NumCrimes
				</td>  
                <td> 
					@item.CrimePercent
				</td>  
                <td>
					@item.ArrestedPercent
                </td>  
            </tr>  
						
						rank++;
        }  
    </tbody>  
</table> 